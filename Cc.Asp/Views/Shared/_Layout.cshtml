<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/validation.css")" rel="stylesheet" />
</head>
<body>

    <header class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-body border-bottom shadow-sm">
        <p class="h5 my-0 me-md-auto fw-normal">First ASP MVC</p>
        <nav class="my-2 my-md-0 me-md-3">
            @Html.ActionLink("Home", "Index", "Home", null, new { @class = "p-2 text-dark" })
            @Html.ActionLink("About", "About", "Home", null, new { @class = "p-2 text-dark" })
            @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "p-2 text-dark" })
        </nav>
    </header>

    <main class="wrapper">

        @RenderBody()

    </main>

    <script src="@Url.Content("~/Content/jquery-3.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
</body>
</html>